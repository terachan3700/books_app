<p id="notice"><%= notice %></p>

<h1><%= t('books.books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('books.title') %></th>
      <th><%= t('books.memo') %></th>
      <th><%= t('books.author') %></th>
      <th><%= t('books.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('books.show'), book %></td>
        <td><%= link_to t('books.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('books.destroy'), book, method: :delete, data: { confirm: t('books.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('books.new'), new_book_path %>
